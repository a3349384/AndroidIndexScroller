<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView">
    </android.support.v7.widget.RecyclerView>

    <cn.zmy.IndexScroller
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:is_textSize="12dp"
        app:is_textSizePressed="20dp"
        app:is_textNormalColor="@android:color/black"
        app:is_textPressedColor="@android:color/holo_blue_light"
        app:is_balloonSize="80dp"
        app:is_balloonTextSize="24dp"
        app:is_clipBalloon="true"
        android:id="@+id/indexScroller"/>
</FrameLayout>
